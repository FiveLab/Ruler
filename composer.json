{
    "name": "fivelab/ruler",
    "description": "Add rule for satisfy objects and generate queries based on specifications.",
    "keywords": [ "ruler", "rule", "satisfy", "specification", "query" ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitaliy Zhuk",
            "email": "v.zhuk@fivelab.org"
        },

        {
            "name": "FiveLab Team",
            "email": "dev@fivelab.org",
            "homepage": "https://fivelab.org"
        }
    ],

    "require": {
        "php": "~8.2"
    },

    "require-dev": {
        "phpunit/phpunit": "~11.4",
        "phpmetrics/phpmetrics": "~3.0",
        "phpstan/phpstan": "~2.0",
        "escapestudios/symfony2-coding-standard": "~3.15.0",
        "doctrine/orm": "~2.10 | ~3.0",
        "ruflin/elastica": "~7.3.2"
    },

    "minimum-stability": "RC",

    "autoload": {
        "psr-4": { "FiveLab\\Component\\Ruler\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "FiveLab\\Component\\Ruler\\Tests\\": "tests/" }
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "thanks": {
            "name": "fivelab/ruler",
            "url": "https://github.com/FiveLab/Ruler"
        }
    }
}
